rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Funções auxiliares
    function isSignedIn() {
      return request.auth != null;
    }

    function orgId() {
      return request.auth.token.orgId;
    }

    function isOrgMember(targetOrgId) {
      return isSignedIn() && orgId() == targetOrgId;
    }

    // Regra padrão: documentos com campo orgId só podem ser lidos/escritos pelo mesmo orgId
    match /{collection}/{docId} {
      allow read, write: if isSignedIn() && resource.data.orgId == orgId();
      allow create: if isSignedIn() && request.resource.data.orgId == orgId();
    }

    // Exemplo: locks (travas)
    match /locks/{lockId} {
      allow read, write: if isSignedIn() && resource.data.orgId == orgId();
      allow create: if isSignedIn() && request.resource.data.orgId == orgId();
    }
  }
}
